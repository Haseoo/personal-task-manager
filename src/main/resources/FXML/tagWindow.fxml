<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.*?>
<GridPane maxHeight="-Infinity" maxWidth="-Infinity" stylesheets="@dialog.css" vgap="10.0"
          xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
    <columnConstraints>
        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints vgrow="SOMETIMES"/>
        <RowConstraints valignment="CENTER" vgrow="NEVER"/>
    </rowConstraints>
    <children>
        <TableView fx:id="tagTable" prefHeight="300.0" prefWidth="400.0">
            <columns>
                <TableColumn prefWidth="300" text="Tag name">
                    <cellValueFactory>
                        <PropertyValueFactory property="name"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="110" text="Task count">
                    <cellValueFactory>
                        <PropertyValueFactory property="taskCount"/>
                    </cellValueFactory>
                </TableColumn>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
        <GridPane hgap="5.0" GridPane.rowIndex="1">
            <columnConstraints>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" percentWidth="33.0"/>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" percentWidth="34.0"/>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" percentWidth="33.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Button mnemonicParsing="false" styleClass="btnLarge" text="Add" onAction="#onAdd"/>
                <Button mnemonicParsing="false" styleClass="btnLarge" text="Remove" GridPane.columnIndex="2"
                        onAction="#onRemove"/>
                <Button fx:id="onTagEdit" mnemonicParsing="false" styleClass="btnLarge" text="Edit" onAction="#onEdit"
                        GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>
            </children>
        </GridPane>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</GridPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
          stylesheets="@taskWindow.css" vgap="10.0" xmlns="http://javafx.com/javafx/11.0.1"
          xmlns:fx="http://javafx.com/fxml/1">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints vgrow="NEVER"/>
        <RowConstraints vgrow="ALWAYS"/>
        <RowConstraints vgrow="NEVER"/>
        <RowConstraints vgrow="NEVER"/>
        <RowConstraints vgrow="ALWAYS"/>
        <RowConstraints vgrow="NEVER"/>
    </rowConstraints>
    <children>
        <VBox alignment="CENTER" fillWidth="false" GridPane.hgrow="ALWAYS">
            <children>
                <GridPane hgap="15.0" vgap="5.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="NEVER"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints vgrow="SOMETIMES"/>
                        <RowConstraints vgrow="SOMETIMES"/>
                        <RowConstraints vgrow="SOMETIMES"/>
                        <RowConstraints vgrow="SOMETIMES"/>
                        <RowConstraints vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label text="Name"/>
                        <Label text="From" GridPane.rowIndex="1"/>
                        <Label text="To" GridPane.rowIndex="2"/>
                        <Label text="Position" GridPane.rowIndex="3"/>
                        <Label text="Tag" GridPane.rowIndex="4"/>
                        <TextField fx:id="nameInput" styleClass="input" GridPane.columnIndex="1"/>
                        <DatePicker fx:id="dateFromInput" editable="false" styleClass="input" GridPane.columnIndex="1"
                                    GridPane.rowIndex="1"/>
                        <DatePicker fx:id="dateToInput" styleClass="input" GridPane.columnIndex="1"
                                    GridPane.rowIndex="2"/>
                        <Spinner fx:id="positionInput" styleClass="input" GridPane.columnIndex="1"
                                 GridPane.rowIndex="3"/>
                        <ChoiceBox fx:id="tagInput" styleClass="input" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                    </children>
                </GridPane>
            </children>
        </VBox>
        <GridPane vgap="5.0" GridPane.rowIndex="1">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="NEVER"/>
                <RowConstraints vgrow="NEVER"/>
            </rowConstraints>
            <children>
                <Label minHeight="30.0" minWidth="30.0" text="Description"/>
                <TextArea prefHeight="100.0" GridPane.rowIndex="1"/>
            </children>
        </GridPane>
        <GridPane GridPane.rowIndex="2">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <GridPane>
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS"/>
                        <ColumnConstraints halignment="CENTER" hgrow="NEVER"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints vgrow="NEVER"/>
                    </rowConstraints>
                    <children>
                        <Button maxHeight="30.0" maxWidth="30.0" minHeight="30.0" minWidth="30.0"
                                mnemonicParsing="false" onAction="#onSteepAdd" prefHeight="30.0" prefWidth="30.0"
                                styleClass="addButton" GridPane.columnIndex="1">
                            <graphic>
                                <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@icons/addBlack.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Label styleClass="h1" text="Task steeps"/>
                    </children>
                </GridPane>
            </children>
        </GridPane>
        <GridPane GridPane.rowIndex="5">
            <columnConstraints>
                <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" percentWidth="50.0"/>
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" percentWidth="50.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Button cancelButton="true" mnemonicParsing="false" onAction="#onCancel" styleClass="btn"
                        text="Cancel"/>
                <Button defaultButton="true" mnemonicParsing="false" onAction="#onSave" styleClass="btn" text="Save"
                        GridPane.columnIndex="1"/>
            </children>
        </GridPane>
        <ScrollPane hbarPolicy="NEVER" maxHeight="200.0" vbarPolicy="ALWAYS" GridPane.rowIndex="4">
            <content>
                <VBox>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
        <ProgressBar maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="25.0"
                     progress="0.0" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.valignment="CENTER">
            <GridPane.margin>
                <Insets bottom="5.0" top="5.0"/>
            </GridPane.margin>
            <tooltip>
                <Tooltip text="Overall task progress"/>
            </tooltip>
        </ProgressBar>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</GridPane>

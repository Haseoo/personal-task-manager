<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="5.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
   <children>
      <Label text="Pick a date" VBox.vgrow="NEVER">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <DatePicker fx:id="dateInput" editable="false" VBox.vgrow="NEVER" />
      <TableView VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn prefWidth="75.0" text="Name" />
            <TableColumn prefWidth="75.0" text="From date" />
            <TableColumn prefWidth="75.0" text="To date" />
            <TableColumn prefWidth="75.0" text="Task tag" />
            <TableColumn prefWidth="75.0" text="Completness" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
